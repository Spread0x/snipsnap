{
  "name": "snipsnap-templates-vscode",
  "displayName": "Snipsnap Templates",
  "publisher": "snipsnapdev",
  "description": "Manage, share and use code templates with cloud UI and VS Code Extension",
  "icon": "snipsnap-logo.png",
  "version": "0.3.10",
  "repository": {
    "type": "git",
    "url": "https://github.com/snipsnapdev/snipsnap.git",
    "directory": "templates/vscode-extension"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "react",
    "generate",
    "component",
    "boilerplate"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "commands": [
      {
        "command": "snipsnap-templates.runExtension",
        "title": "Create from Template",
        "category": "Snipsnap"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "snipsnap-templates.runExtension",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "snipsnap-templates.runExtension",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Snipsnap Templates",
      "properties": {
        "snipsnap-templates.token": {
          "type": "string",
          "default": ""
        },
        "snipsnap-templates.defaultServer": {
          "type": "string",
          "default": "https://hasura-t.snipsnap.dev"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "esbuild": "^0.11.23",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vsce": "^1.88.0",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "handlebars": "^4.7.7",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "lodash.uppercase": "^4.3.0"
  }
}
